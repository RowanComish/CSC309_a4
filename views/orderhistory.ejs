<!-- 3.Review Page, My Order Page, Search Page with suggestions -->

<html>
<head>
    <title>Feed - My Orders</title>
    <link href="../css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="../css/style.css" rel="stylesheet" type="text/css">
    <link href="../css/orderhistory.css" rel="stylesheet" type="text/css">
    <link href="../css/navbar.css" rel="stylesheet" type="text/css">
    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
    
    <script src="../js/jquery.js"></script>
    <script src="../js/bootstrap.min.js"></script>
</head>

<body>
    
    <script>
        
        function goToReview() {
            // The route for recipes is '/review/:recipe'
            window.location.href = "/review/0";
        }
        
    </script>
    
    
    <nav class = "navbar navbar-default">

        <div class="navbar-header">

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div>
                <a class="navbar-brand navbar-brand-fix" href="/">Feed</a> 
            </div>
        </div>

        <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav navbar-right">
                <% if (message =='loggedin') { %>
                <li>
                    <a href="/profile">My Profile</a>
                </li>
                <li>
                    <a href="/logout">Logout </a>
                </li>
                <% } else { %>
                <li>
                    <a href="/signup"> Sign Up </a>
                </li>
                <li>
                    <a href="/login" class="visible-xs"> Login </a>
                </li>
                <li class="dropdown hidden-xs">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Login<span class="caret"></span></a>
                    <ul id="login-dp" class="dropdown-menu">
                        <li>
                            <div class="row">
                                <div class="col-md-12">
                                    Login via
                                    <div class="social-buttons text-center">
                                        <a href="/auth/facebook" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook </a>
                                    </div>
                                    or 
                                    <br>
                                    <form action="/login" method="post" class="form" role="form">
                                        <div class="form-group">
                                            <label class="sr-only">Email</label>
                                            <input type="text" name="email" class="form-control" id="email" placeholder="Email" >
                                        </div>
                                        <div class="form-group">
                                            <label class="sr-only" >Password</label>
                                            <input type="password" name="password" class="form-control" id="password" placeholder="Password" >
                                            <div class="help-block text"><a href="">Forget the password ?</a></div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit"class="btn btn-primary btn-block">Sign in</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="container">
    <% if (message =='loggedin') { %>
        <h2 class="text-center order-title">My Orders</h2>

        <div class="row order-section">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="order-item center-block">
                    <!-- Image -->
                    <img src="../img/food_example1.jpeg" class="order-image"> 
                    <!-- Name -->
                    <h4 class="text-center">Pablo's Pan Pizza</h4>
                    <!-- Date -->
                    <h5 class="text-center">21:00 March 3, 2016</h5>
                    <!-- Cost -->
                    <h4 class="text-center">$8.20</h4>
                    <!-- Review Button-->
                    <button type="submit" class="order-review-button btn btn-primary center-block" onclick="goToReview()">Leave a Review</button>
                    <!-- Rating-->
                    <span class="order-rating center-block text-center hidden">
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star-empty"></span>
                    </span>   
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="order-item center-block">
                    <!-- Image -->
                    <img src="../img/food_example2.jpeg" class="order-image">
                     <!-- Name -->
                    <h4 class="text-center">Yoda's Youthful Yogurt</h4>
                    <!-- Date -->
                    <h5 class="text-center"> 12:00 February 25, 2016</h5>
                    <!-- Cost -->
                    <h4 class="text-center">$8.20</h4>
                    <!-- Review Button-->
                    <button type="submit" class="order-review-button btn btn-primary center-block hidden">Leave a Review</button>
                    <!-- Rating-->
                    <span class="order-rating center-block text-center">
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star-empty"></span>
                    </span>                  
                </div>
            </div>

            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="order-item center-block">
                    <!-- Image -->
                    <img src="../img/food_example3.jpeg" class="order-image">
                     <!-- Name -->
                    <h4 class="text-center">Sally's Super Salad</h4>
                    <!-- Date -->
                    <h5 class="text-center"> 21:00 February 20, 2016</h5>
                    <!-- Cost -->
                    <h4 class="text-center">$8.20</h4>
                    <!-- Review Button-->
                    <button type="submit" class="order-review-button btn btn-primary center-block hidden">Leave a Review</button>
                    <!-- Rating-->
                    <span class="order-rating center-block text-center">
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                    </span>   
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="order-item center-block">
                    <!-- Image -->
                    <img src="../img/food_example4.jpeg" class="order-image">
                     <!-- Name -->
                    <h4 class="text-center">Bob's Beefy Burger</h4>
                    <!-- Date -->
                    <h5 class="text-center"> 18:00 February 10, 2016</h5>
                    <!-- Cost -->
                    <h4 class="text-center">$8.20</h4>
                    <!-- Review Button-->
                    <button type="submit" class="order-review-button btn btn-primary center-block hidden">Leave a Review</button>
                    <!-- Rating-->
                    <span class="order-rating center-block text-center">
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star"></span>
                      <span class="glyphicon glyphicon-star-empty"></span>
                      <span class="glyphicon glyphicon-star-empty"></span>
                    </span>   
                </div>
            </div>
        </div>
        <% } else if (message=='notloggedin') { %>
            <h2 class="text-center order-title">Please login to view your orders</h2>
        <% } else if (message == 'notloggedinOrder') { %>
            <h2 class="text-center order-title">Please login to add an order!</h2>
        <% } %>
    </div>
</body>
<hr>
<footer class="text-center">
    <p class="copyright">Copyright &copy; Feed 2016</p>
</footer>
</html>
