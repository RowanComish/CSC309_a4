<html>
<head>

    <title> Feed -  New Dish! </title>

    <link href="../css/bootstrap.min.css" rel="stylesheet">
    <link href="../css/style.css" rel="stylesheet">
    <link href="../css/navbar.css" rel="stylesheet">
    <link href="../css/profile.css" rel="stylesheet" type="text/css">

    <link href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Droid+Serif:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>

</head>

<body>

    <nav class = "navbar navbar-default">

        <div class="navbar-header">

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div>
                <a class="navbar-brand navbar-brand-fix" href="/">Feed</a> 
            </div>
        </div>

        <div class="collapse navbar-collapse " id="bs-example-navbar-collapse-1">

            <ul class="nav navbar-nav navbar-right">
                <% if (message =='loggedin') { %>
                <li>
                    <a href="/profile">My Profile</a>
                </li>
                <li>
                    <a href="/logout">Logout </a>
                </li>
                <% } else { %>
                <li>
                    <a href="/signup"> Sign Up </a>
                </li>
                <li>
                    <a href="/login" class="visible-xs"> Login </a>
                </li>
                <li class="dropdown hidden-xs">
                    <a href="" class="dropdown-toggle" data-toggle="dropdown">Login<span class="caret"></span></a>
                    <ul id="login-dp" class="dropdown-menu">
                        <li>
                            <div class="row">
                                <div class="col-md-12">
                                    Login via
                                    <div class="social-buttons text-center">
                                        <a href="/auth/facebook" class="btn btn-fb"><i class="fa fa-facebook"></i> Facebook </a>
                                    </div>
                                    or 
                                    <br>
                                    <form action="/login" method="post" class="form" role="form">
                                        <div class="form-group">
                                            <label class="sr-only">Email</label>
                                            <input type="text" name="email" class="form-control" id="email" placeholder="Email" >
                                        </div>
                                        <div class="form-group">
                                            <label class="sr-only" >Password</label>
                                            <input type="password" name="password" class="form-control" id="password" placeholder="Password" >
                                            <div class="help-block text"><a href="">Forget the password ?</a></div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit"class="btn btn-primary btn-block">Sign in</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ul>
                </li>
                <% } %>
            </ul>
        </div>
    </nav>
        
        <div class="container">
            <div class="row row-centered">
                <div class="col-xs-12 col-centered">
                <% if (message =='loggedin') { %>
                    <form class="editprofile">
                        <h3 class="text-center"> New Dish </h3>
                        <ul>
                            <li>
                                <label class="field-style field-full align-none">Add A Picture of the Dish:  </label>
                                <img style="width: 200px;"class="field-style field-full align-centre" src="img/foodimage.png"> <br>
                                <input type="file" id="my_file" class="field-style field-full align-none"/>
                            </li>
                            <li>
                                <input type="text" name="field1" class="field-style field-full align-none" placeholder="Name of Dish *" />
                            </li>
                            <li>
                                <label class="field-style field-full align-none">Select the Type of Dish: </label>
                                <select class="field-style field-full align-none">
                                  <option value="volvo">Main Course</option>
                                  <option value="saab">Appetizer</option>
                                  <option value="opel">Dessert</option>
                                  <option value="audi">Drink</option>
                                </select>
                            </li>
                            <li>
                                <label class="field-style field-full align-none">Select the Cuisine Type: </label>
                                <select class="field-style field-full align-none">
                                  <option value="volvo">Western</option>
                                  <option value="saab">Mediterranean</option>
                                  <option value="opel">Chinese</option>
                                </select>
                            </li>
                            <li>
                                <input type="text" name="field5" class="field-style field-full align-none" placeholder="Ingredients (Separated by commas)" />

                            </li>
                            <li>
                                <textarea name="field5" class="field-style" placeholder="Dish Description"></textarea>
                            </li>
                            <li>
                                <input type="submit" value="Save Changes" />
                            </li>
                        </ul>
                    </form>
                <% } else { %>
                    <h3 class="text-center"> Please Sign In To Create a New Dish </h3>
                <% } %>
                </div>
            </div>
        </div>
            <hr>
            <footer class="text-center">
                <p class="copyright">
                    Copyright &copy; Feed 2016
                </p>
            </footer>
    </body>
</html>
